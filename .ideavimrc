" .ideavimrc is a configuration file for IdeaVim plugin. It uses
"   the same commands as the original .vimrc configuration.
" You can find a list of commands here: https://jb.gg/h38q75
" Find more examples here: https://jb.gg/share-ideavimrc
set scrolloff=5
set incsearch
set relativenumber
set idearefactormore=keep
set quickscope

" ui to show key mapping
set which-key
set notimeout

set mini-ai

" --- Enable IdeaVim plugins https://jb.gg/ideavim-plugins
" Highlight copied text
Plug 'machakann/vim-highlightedyank'
" Commentary plugin
Plug 'tpope/vim-commentary'
" Sneak (search by 2 letters)
Plug 'justinmk/vim-sneak'
Plug 'tpope/vim-surround'
Plug 'preservim/nerdtree'


" set <leader> to <space>
let mapleader = " "

imap jk <Esc>

map <C-d> <C-d>zz
map <C-u> <C-u>zz
map n nzzzv
map N Nzzzv
vnoremap p "_dP


nmap <leader>e :NERDTreeToggle<CR>
" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
nmap <leader>cf <Action>(ReformatCode)
nmap <leader>cF <Action>(com.github.lipiridi.spotless.applier.actions.ReformatFileAction)
nmap <leader>ci <Action>(OptimizeImports)
nmap <leader>ca <Action>(ShowIntentionActions)

nmap rn <Action>(RenameElement)
nmap rR <Action>(Refactorings.QuickListPopupAction)

nmap ge <Action>(ShowErrorDescription)
nmap gI <Action>(GotoImplementation)
nmap gD <Action>(GotoDeclaration)
nmap K <Action>(ShowHoverInfo)
nmap gT <Action>(GotoTest)
nmap <leader>s <Action>(ToggleBookmark)
nmap <leader>S <Action>(ShowBookmarks)

nmap <leader>dd <Action>(ChooseDebugConfiguration)
nmap <leader>rr <Action>(ChooseRunConfiguration)
nmap <leader>rR <Action>(Stop)
nmap <leader>dD <Action>(Stop)
nmap <leader>bb <Action>(ToggleLineBreakpoint)
nmap <leader>bB <Action>(ViewBreakpoints)

nmap <leader>ff <Action>(GotoFile)
nmap <leader>fs <Action>(FindInPath)

nma <leader>ww <Action>(CloseContent)
nmap <leader>ws <Action>(SplitHorizontally)
nmap <leader>wv <Action>(SplitVertically)
nmap <TAB> <Action>(NextTab)
nmap <s-TAB> <Action>(PreviousTab)

nnoremap <leader>re :action IdeaVim.ReloadVimRc.reload<CR>
