" .ideavimrc is a configuration file for IdeaVim plugin. It uses
"   the same commands as the original .vimrc configuration.
" You can find a list of commands here: https://jb.gg/h38q75
" Find more examples here: https://jb.gg/share-ideavimrc
set scrolloff=5
set incsearch
set relativenumber
set idearefactormore=keep

set quickscope
let g:qs_highlight_on_keys = ['f', 'F', 't', 'T']

set surround

set NERDTree
nmap <leader>e :NERDTreeToggle<CR>

set mini-ai

" --- Enable IdeaVim plugins https://jb.gg/ideavim-plugins
" Highlight copied text
Plug 'machakann/vim-highlightedyank'
" Commentary plugin
Plug 'tpope/vim-commentary'
" Sneak (search by 2 letters)
Plug 'justinmk/vim-sneak'
" Surround (edited " { [ ( easily)
Plug 'tpope/vim-surround'

" set <leader> to <space>
let mapleader = " "

imap jj <Esc>

map <C-d> <C-d>zz
map <C-u> <C-u>zz
map n nzzzv
map N Nzzzv
vnoremap p "_dP

"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
nmap cf <Action>(ReformatCode)
nmap cF <Action>(com.github.lipiridi.spotless.applier.actions.ReformatFileAction)
nmap cr <Action>(RenameElement)
nmap cI <Action>(OptimizeImports)
nmap cR  <Action>(Refactorings.QuickListPopupAction)
nmap <leader>dd <Action>(Debug)
nmap <leader>rr <Action>(Run)
nmap <leader>bb <Action>(ToggleLineBreakpoint)
nmap <leader>ff <Action>(GotoFile)
nmap <leader>fs <Action>(FindInPath)
nmap <leader>gg <Action>(Git.Menu)
nmap ge <Action>(ShowErrorDescription)
nmap gI <Action>(GotoImplementation)
nmap gD <Action>(GotoDeclaration)
nmap gt <Action>(Scala.TypeInfo)
nmap gT :action GotoTest<CR>